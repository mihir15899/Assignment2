@model IEnumerable<GBCTravel.Models.Flight>

@{
    ViewData["Title"] = "Flight Index";
}

<div class="container">
    <h1>Explore Our Flights</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Create New Flight</a>
    </p>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Airline</th>
                    <th>Origin</th>
                    <th>Destination</th>
                    <th>Departure Time</th>
                    <th>Arrival Time</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var flight in Model)
                {
                    <tr>
                        <td>@flight.Airline</td>
                        <td>@flight.Origin</td>
                        <td>@flight.Destination</td>
                        <td>@flight.DepartureTime.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@flight.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>$@flight.Price</td>
                        <td>
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@flight.Id">Details</a>
                            <a class="btn btn-info" asp-action="Edit" asp-route-id="@flight.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@flight.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No flights found.</p>
    }
</div>
