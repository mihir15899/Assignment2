@model GBCTravel.Models.Hotel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Hotel</h4>
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid mb-4" alt="Hotel Image">
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PricePerNight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PricePerNight)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="viewHotels" asp-controller="userView">Back to List</a>
    <form id="bookForm-@Model.Id" asp-controller="Hotel" asp-action="hotelBooking" asp-route-id="@Model.Id method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="button" class="btn btn-success" onclick="confirmBooking(@Model.Id)">Book a Hotel</button>
    </form>
</div>


<script>
    function confirmBooking(carrentalId) {
        if (confirm('Are you sure you want to book this Hotel?')) {
            document.getElementById('bookForm-' + carrentalId).submit();
        }
    }</script>