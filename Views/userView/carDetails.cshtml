@model GBCTravel.Models.Car

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DailyRate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DailyRate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="viewCars" asp-controller="userView">Back to List</a>
    <form id="bookForm-@Model.Id" asp-controller="Cars" asp-action="carBooking" asp-route-id="@Model.Id method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="button" class="btn btn-success" onclick="confirmBooking(@Model.Id)">Rent a Car</button>
    </form>
</div>


<script>
    function confirmBooking(carrentalId) {
        if (confirm('Are you sure you want to book this car rental?')) {
            document.getElementById('bookForm-' + carrentalId).submit();
        }
    }</script>
